{% extends 'admin/base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}
    <h1>Historique</h1>

    <table class="table table-striped table-bordered table-hover" style="border:2px solid black">
        <thead>
            <tr>
                <th>Id</th>
                <th>Compte débité</th>
                <th>Compte crédité</th>
                <th>Montant</th>
                <th>Date</th>
                <th></th>
                <th>actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for history in histories %}
            <tr>
                <td>{{ history.id }}</td>
                <td>{{ history.debitAccount }}</td>
                <td>{{ history.creditAccount }}</td>
                <td>{{ history.amount }}</td>
                <td>{{ history.editAt ? history.editAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('admin_history_show', {'id': history.id}) }}">Voir</a>
                </td>
                <td></td>
                <td>
                    {{ include('admin/history/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'enregistrements trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
