{% extends 'admin/base.html.twig' %}

{% block title %}Les clients{% endblock %}

{% block body %}
<style>
    .lift {
        overflow-x: scroll; 
        width: 100px;
    }
    td {
        width: 150px;
    }
</style>

<div class = "jumbotron"  style="display:block; background-color: powderblue;">
    <h1><mark> Les clients</mark></h1>
    <div class="row" style="margin-top:25px">
        <div class="col-3">
            <a class="btn btn-primary" href="{{ path('admin_user_new') }}">Créer nouveau client</a>
        </div>
        <div class="col"></div>
    </div>
</div>
    
    <table class="table table-striped table-bordered table-hover" style="border:2px solid black">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Comptes</th>
                <th>Bénéficiaire</th>
                <th class="centrer">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.birthdayAt ? user.birthdayAt|date('d-m-Y') : '' }}</td>
                <td>
                    <ul>
                    {% for account in user.bankaccounts %}
                        <li>{{ account.iban }}</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                    {% for account in user.bankaccounts %}
                        {% if account.beneficiary %}
                        <li>{{ account.beneficiary }}</li>
                        {% endif %}
                    {% endfor %}
                    </ul>   
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('admin_user_show', {'id': user.id}) }}">Voir</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('admin_user_edit', {'id': user.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'enregistrements trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
