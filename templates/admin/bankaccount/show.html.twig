{% extends 'admin/base.html.twig' %}

{% block title %}Compte en banque{% endblock %}

{% block body %}
    <h1>Compte en banque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bankaccount.id }}</td>
            </tr>
            <tr>
                <th>Iban</th>
                <td>{{ bankaccount.iban }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ bankaccount.amount }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ bankaccount.createdAt|date('d/m/Y') }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('admin_bankaccount') }}">Retour à la liste</a>

    <a class="btn btn-info" href="{{ path('admin_bankaccount_edit', {'id': bankaccount.id}) }}">Editer</a>

    {{ include('admin/bankaccount/_delete_form.html.twig') }}
{% endblock %}
