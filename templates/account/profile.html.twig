{% extends "base.html.twig" %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du profil</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                <div class="alert alert-light">
                    <h2 class="heading">Informations générales</h2>
                    <hr>
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.birthdayAt) }}
               
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
            <div class="col"></div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}