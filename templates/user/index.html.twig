{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
<style>
.ombre {
  width: 200px;
  padding: 35px 20px;
  line-height: 1.5em;
  color: #000;
  background-color: #ddd;
  background-image: linear-gradient(#E5E5E5, #CFCFCF);
  box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7);
}
.row {
    margin-bottom: 30px;
}
h2 {
    text-align: center;
    //text-decoration: underline;
}
b {
    color: purple;
}
</style>

    <div class="container">
    {% if user is same as(app.user) %}
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <h1>{{ user.fullName }}</h1> 
                <div class="mt-3">
                    <a href="{{ path('account_profile') }}" class="btn btn-primary">Modifier mes informations</a>
                    <a href="{{ path('account_password') }}" class="btn btn-primary">Modifier mon mot de passe</a>
                    <a href="{{ path('user_newBeneficiary') }}" class="btn btn-primary">Créer un bénéficiaire</a>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
        <h2 class="souligne">Vos comptes banquaires</h2>
        <div class="row">
            
            <div class="col-2"></div>
            <div class="col-8">
            <h3>Comptes et soldes de vos bénéficiaires :</h3>
                {% if benefUser is not null %}
                <ul>
                    {% for benef in beneficiaries %}
                    <b>Iban : </b><li>{{benef.iban}}</li>
                    <b>Solde : </b><li>{{benef.amount}} €</li>
                     <b>Nom : </b><li>{{benefUser.firstname}}</li>
                    <b>Prénom : </b><li>{{benefUser.lastname}}</li>
                    <b>Email : </b><li>{{benefUser.email}}</li>
                    <hr>
                    {% endfor %}
                </ul>
                {% else %}
                    <h4><b>Vous n'avez pas encore de bénéficiaires</b></h4>
                {% endif %}
            <h3>Vos propres comptes et soldes :</h3>
                <ul>
                    {% for mine in userAccount %}
                    <b>Iban : </b><li>{{mine.iban}}</li>
                    <b>Solde : </b><li>{{mine.amount}} €</li>
                    <hr>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-2"></div>
        </div>
    {% endif %}
       
    </div>

{% endblock %}
