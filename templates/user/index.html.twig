{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
<style>
.ombre {
  width: 200px;
  padding: 35px 20px;
  line-height: 1.5em;
  color: #000;
  background-color: #ddd;
  background-image: linear-gradient(#E5E5E5, #CFCFCF);
  box-shadow: -1px 2px 5px 1px rgba(0, 0, 0, 0.7);
}
.row {
    margin-bottom: 30px;
}
h2 {
    text-align: center;
}
b {
    color: purple;
}
</style>

    <div class="container">
        <div class="row">
        {% if user is same as(app.user) %}
            <div class="col-2"></div>
            <div class="col-8">
                <h1>{{ user.fullName }}</h1> 
                <div class="mt-3">
                    <a href="{{ path('account_profile') }}" class="btn btn-primary">Modifier mes informations</a>
                    <a href="{{ path('account_password') }}" class="btn btn-primary">Modifier mon mot de passe</a>
                    <a href="{{ path('user_newBeneficiary') }}" class="btn btn-primary">Créer un bénéficiaire</a>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8" class="centrer">
                <div class="text-center ombre">
                    {{user.firstname}}</br>
                    {{user.lastname}}</br>
                    {{user.birthdayAt|date('d-m-Y')}}</br>
                    {{user.email}}</br>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
        <h2>Vos comptes banquaires</h2>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
            <ul>
            {% for account in user.bankaccounts %}
                <li><h3><strong>Iban numéro : </strong><b>{{ account.iban }}<b></h3></li>
            {% endfor %}
            </ul>
            </div>
            <div class="col-3"></div>
        </div>
        {% endif %}
       
    </div>

{% endblock %}
